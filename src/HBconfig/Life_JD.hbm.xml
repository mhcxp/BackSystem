<?xml version="1.0"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping package="com.BS.domain">  
    <class name="Life_JD" table="eleser">   
        <id name="eleId" column="eleId">  
            <generator class="increment" />  
        </id>  
        <property name="eleName" column="eleName"/>
        <property name="eleKind" column="eleKind"/>  
        <property name="eleExp" column="eleExp"/> 
        <property name="elePrice" column="elePrice"/> 
        <property name="contact" column="contact"/>     
    </class>  
</hibernate-mapping>  